}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {
            getMarca(true);
        });

        const getMarca = (first=false) => {
            $.ajax({
                type: "GET",
                url: "/Anuncio/getMarca",
                contentType: "application/json; charset=utf-8",
                datatype: 'JSON',
                contentType: "application/json; charset=utf-8",
                success: (data) => {
                    let dt = JSON.parse(data);

                    $("#marca").empty();

                    $.each(dt, (i, row) => {
                        $("#marca").append(`<option key="${row.ID}" value="${row.Name}">${row.Name}</option>`);
                    })

                    if (first) {
                        $('#marca option:contains("@Model.marca")').attr('selected', 'selected');
                        getModel(true);
                        console.log('marca');
                    }
                    else {
                        $("#marca").trigger("change");
                    }

                },
                error: (xhr, status, error) => {
                    $("#dataDiv").html("Result: " + status + " " + error + " " + xhr.status + " " + xhr.statusText)
                }
            });
        }

        const getModel = (first=false) => {

            $.ajax({
                type: "POST",
                url: "/Anuncio/getModel",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({ markId: $("#marca option:selected").attr("key") }),
                datatype: 'JSON',
                contentType: "application/json; charset=utf-8",
                success: (data) => {
                    let dt = JSON.parse(data);

                    $("#modelo").empty();

                    $.each(dt, (i, row) => {
                        $("#modelo").append(`<option key="${row.ID}" value="${row.Name}">${row.Name}</option>`);
                    })

                    if (first) {
                        $('#modelo option:contains("@Model.modelo")').attr('selected', 'selected');
                        getVersion(true);

                    }
                    else {
                        $("#modelo").trigger("change");
                    }

                },
                error: (xhr, status, error) => {
                    $("#dataDiv").html("Result: " + status + " " + error + " " + xhr.status + " " + xhr.statusText)
                }
            });

        }

        const getVersion = (first = false) => {

            $.ajax({
                type: "POST",
                url: "/Anuncio/getVersion",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({ modelId: $("#modelo option:selected").attr("key") }),
                datatype: 'JSON',
                contentType: "application/json; charset=utf-8",
                success: (data) => {
                    let dt = JSON.parse(data);

                    $("#versao").empty();

                    $.each(dt, (i, row) => {
                        $("#versao").append(`<option key="${row.ID}" value="${row.Name}">${row.Name}</option>`);
                    })

                    if (first) {
                        $("#versao option:contains('@Model.versao.ToString()')").attr('selected', 'selected');
                    }
                },
                error: (xhr, status, error) => {
                    $("#dataDiv").html("Result: " + status + " " + error + " " + xhr.status + " " + xhr.statusText)
                }
            });
        }

        $("#modelo").change(() => { getVersion(); });
        $("#marca").change(() => { getModel(); });
    </script>
}
